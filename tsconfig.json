{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "lib": [
        "DOM",
        "ES2015",
        "ES2016",
        "ES2017",
        "ES2018",
        "ES2019",
        "ES2020"
      ],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "types": ["jest"]
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}